<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:weightSum="100"
    android:orientation="vertical"
    tools:context="com.eways.etutor.Fragment.FragmentUpdateDetail">


    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/ivParallax"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/city"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7" />
                <ImageView
                    android:id="@+id/avarta"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/user"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:title=""
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icn_back_white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/save"
                            android:textSize="20sp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="7" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="92"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="9"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="48"
                                android:hint="@string/hint_first_name"
                                android:textColorHint="@color/colorGrey"
                                android:background="@drawable/edittext_shape_3"
                                android:padding="10dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="17sp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4" />

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="48"
                                android:hint="@string/hint_last_name"
                                android:background="@drawable/edittext_shape_3"
                                android:padding="10dp"
                                android:textColor="@color/colorBlack"
                                android:textColorHint="@color/colorGrey"
                                android:textSize="17sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="2" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="9"
                            android:layout_marginEnd="40dp"
                            android:layout_marginStart="40dp"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="40"
                                android:text="@string/hint_male"
                                android:textColor="@color/colorBlack"
                                android:textSize="17sp"
                                android:buttonTint="@color/colorBlue"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="20" />

                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="Ná»¯"
                                android:layout_weight="40"
                                android:textSize="17sp"
                                android:textColor="@color/colorBlack"
                                android:buttonTint="@color/colorBlue"/>
                        </RadioGroup>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="3"/>
                        <EditText
                            android:id="@+id/date_picker"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="9"
                            android:focusableInTouchMode="false"
                            android:hint="@string/hint_birthday"
                            android:background="@drawable/edittext_shape_3"
                            android:padding="10dp"
                            android:textColorHint="@color/colorGrey"
                            android:textColor="@color/colorBlack"/>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="3"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="9"
                            android:hint="@string/hint_email"
                            android:background="@drawable/edittext_shape_3"
                            android:padding="10dp"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorGrey"/>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="3"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="9"
                            android:hint="@string/hint_phone_number"
                            android:background="@drawable/edittext_shape_3"
                            android:padding="10dp"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorGrey"/>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="3"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="9"
                            android:hint="@string/hint_address"
                            android:background="@drawable/edittext_shape_3"
                            android:padding="10dp"
                            android:textColorHint="@color/colorGrey"
                            android:textColor="@color/colorBlack"/>

                        <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="3"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="9"
                            android:hint="@string/hint_degree"
                            android:background="@drawable/edittext_shape_3"
                            android:padding="10dp"
                            android:textColorHint="@color/colorGrey"
                            android:textColor="@color/colorBlack"/>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="3"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="9"
                            android:hint="@string/hint_career"
                            android:background="@drawable/edittext_shape_3"
                            android:padding="10dp"
                            android:textColorHint="@color/colorGrey"
                            android:textColor="@color/colorBlack"/>

                    </LinearLayout>
                </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>


</LinearLayout>
