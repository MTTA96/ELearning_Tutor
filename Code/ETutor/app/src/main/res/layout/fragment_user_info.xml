<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:weightSum="100"
    tools:context=".Views.Fragment.Authentication.FragmentUserSignUpInfo">

    <!--fake space-->
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10" />


    <!-- username -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Họ tên:"
        android:textColor="@color/colorBlue"
        android:textSize="19sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <!--Họ-->
    <EditText
        android:id="@+id/first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:background="@drawable/edittext_shape_3"
        android:hint="Họ"
        android:padding="7dp"
        android:singleLine="true"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorGrey"
        android:textSize="18sp" />

    <!--Tên-->
    <EditText
        android:id="@+id/last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:background="@drawable/edittext_shape_3"
        android:hint="Tên"
        android:padding="7dp"
        android:singleLine="true"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorGrey"
        android:textSize="18sp" />

    <!--Password-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Mật khẩu:"
        android:textColor="@color/colorBlue"
        android:textSize="19sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:background="@drawable/edittext_shape_3"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:padding="7dp"
        android:singleLine="true"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorGrey"
        android:textSize="18sp" />


    <!--Policy-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bấm tiếp tục đồng nghĩa với việc bạn đã đồng ý với "
            android:textColor="@color/colorBlack" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/policy_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điều Khoản"
                android:textColor="@color/colorMain"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" của chúng tôi."
                android:textColor="@color/colorBlack" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
