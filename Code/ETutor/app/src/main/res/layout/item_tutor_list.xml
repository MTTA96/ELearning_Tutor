<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_item_user_list"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_tutor_list_item"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="horizontal"
    android:background="@color/White"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <!--User avatar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/MarginRight_itemKhoaHoc_BlockImg"
        android:layout_weight="2.2"
        android:background="@color/White"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/avatar_item_user_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

    </LinearLayout>

    <!--User info-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/horizontal_padding_user_info_list_item"
                android:paddingRight="@dimen/horizontal_padding_user_info_list_item">

                <!--User name-->
                <TextView
                    android:id="@+id/user_name_item_user_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/MarginTop_Tv_KhoaHoc"
                    android:text="@string/Xem_Ten"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />

                <!--Subject's name-->
                <TextView
                    android:id="@+id/subject_item_user_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/MarginTop_Tv_KhoaHoc"
                    android:text="Skype: "
                    android:textColor="@color/colorGrey" />

                <!-- Skype -->
                <TextView
                    android:id="@+id/skype_item_user_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/MarginTop_Tv_KhoaHoc"
                    android:text="Skype: "
                    android:textColor="@color/colorGrey" />
                <!--Rating-->
                <!--<RatingBar-->
                    <!--android:id="@+id/rtb_item_user_list"-->
                    <!--style="@style/ratingbarCustom"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="@dimen/MarginTop_Tv_KhoaHoc"-->
                    <!--android:isIndicator="true"-->
                    <!--android:numStars="5"-->
                    <!--android:stepSize="0.5"-->
                    <!--android:visibility="gone" />-->
            </LinearLayout>

        </LinearLayout>

        <!--Request button-->
        <Button
            android:id="@+id/btn_request_tutor_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/white_rectangle_corner_main_color_stroke_shape"
            android:paddingHorizontal="@dimen/min_horizontal_padding"
            android:text="Gửi yêu cầu"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</LinearLayout>