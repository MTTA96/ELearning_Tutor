<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_header"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_main_height"
    android:padding="@dimen/horizontal_padding"
    android:background="@color/colorMain">

    <!-- Hình đại diện -->
    <ImageView
        android:id="@+id/user_ava_nav_menu"
        android:layout_width="@dimen/avatar_menu_width"
        android:layout_height="match_parent"
        android:background="@drawable/avarta_shape"
        android:layout_marginTop="@dimen/avatar_menu_vertical_margin"
        android:layout_marginBottom="@dimen/avatar_menu_vertical_margin"/>

    <!-- Thông tin khác -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/info_header_menu_horizontal_padding"
        android:paddingTop="@dimen/info_header_menu_vertical_padding">
        <!-- Tên -->
        <TextView
            android:id="@+id/user_name_nav_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/header_msg_chua_dang_nhap"
            android:textColor="@android:color/white"
            android:textSize="@dimen/name_size"
            android:textStyle="bold"/>
        <!-- Email -->
        <TextView
            android:id="@+id/user_email_nav_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/email_text_size"/>
    </LinearLayout>
</LinearLayout>