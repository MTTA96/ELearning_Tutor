<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/course_shape"
        android:elevation="10dp"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="32">
            <ImageView
                android:id="@+id/img_avarta"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:orientation="vertical"
            android:layout_weight="58">

            <TextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/colorBlue"
                android:textStyle="bold"
                android:text="Student Name"/>

            <TextView
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="@color/colorBlue"
                android:textStyle="bold"
                android:text="Subject"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="16"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="37"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/date_shape"
                    android:textColor="@color/colorWhite"
                    android:text="18/05/2018"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:text="-"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="37"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/date_shape"
                    android:textColor="@color/colorWhite"
                    android:text="18/05/2018"/>
            </LinearLayout>
            
            <RelativeLayout
                android:id="@+id/bg_status"
                android:layout_width="65dp"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:background="@drawable/status_shape">
                <TextView
                    android:id="@+id/text_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kết thúc"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp" />
            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center">

            <ImageView
                android:id="@+id/to_detail"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/btn_next_white"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>